{
  "name": "ecoviz-backend",
  "version": "1.0.0",
  "description": "EcoViz Backend - Centralized package for all Lambda functions",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "deploy": "npm run build && dotenv -e .env -- sam deploy --parameter-overrides ParameterKey=OpenAIAPIKey,ParameterValue=$OPENAI_API_KEY",
    "local:invoke": "sam local invoke CalculateFunction --event events/calculate.json",
    "local:api": "sam local start-api --port 3001"
  },
  "dependencies": {
    "@langchain/core": "^0.3.61",
    "@langchain/openai": "^0.5.16",
    "esbuild": "^0.25.0",
    "langchain": "^0.3.29",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/node": "^20.5.7",
    "dotenv-cli": "^8.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
